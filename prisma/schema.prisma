generator client {
  provider = "prisma-client"
  output   = "./generated/prisma/client"
}

datasource db {
  provider = "postgresql"

  
}

model User {
  id                 String        @id @default(cuid())
  firstName          String?
  lastName           String?
  email              String        @unique
  password           String?
  phone              String?
  address            String?
  referralCode       String?       @unique
  referredById       String?
  isActive           Boolean       @default(true)
  role               UserRole      @default(AFFILIATE)
  totalEarnings      Float         @default(0)
  currentBalance     Float         @default(0)
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt
  city               String?       @default("Addis Ababa")
  country            String?       @default("Ethiopia")
  emailVerified      Boolean       @default(false)
  image              String?
  name               String
  childCount         Int           @default(0)
  descendantCount    Int           @default(0)
  lastSaleAt         DateTime?
  level              Int           @default(0)
  lifetimeCommission Float         @default(0)
  parentPath         String?
  pendingCommission  Float         @default(0)
  accounts           Account[]
  sessions           Session[]
  transactions       Transaction[]
  withdrawals        Withdrawal[]
  referredBy         User?         @relation("ReferralTree", fields: [referredById], references: [id])
  referrals          User[]        @relation("ReferralTree")

  @@index([referredById])
  @@index([level])
  @@index([parentPath])
  @@index([referralCode])
  @@map("users")
}

model Transaction {
  id          String          @id @default(cuid())
  userId      String
  amount      Float
  type        TransactionType
  description String?
  referenceId String?
  createdAt   DateTime        @default(now())
  user        User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("transactions")
}

model Account {
  id                    String    @id @default(cuid())
  userId                String
  providerId            String
  accountId             String
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  accessToken           String?
  accessTokenExpiresAt  DateTime?
  idToken               String?
  refreshToken          String?
  refreshTokenExpiresAt DateTime?
  sessionState          String?
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("account")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model Verification {
  id         String    @id @default(cuid())
  createdAt  DateTime? @default(now())
  updatedAt  DateTime? @updatedAt
  value      String
  identifier String
  expiresAt  DateTime

  @@map("verification")
}

model Withdrawal {
  id              String           @id @default(cuid())
  userId          String
  amount          Float
  method          String
  details         Json?
  status          WithdrawalStatus @default(PENDING)
  rejectionReason String?
  referenceId     String?
  createdAt       DateTime         @default(now())
  processedAt     DateTime?
  user            User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("withdrawals")
}

enum WithdrawalStatus {
  PENDING
  APPROVED
  REJECTED
  PROCESSED
}

enum UserRole {
  ADMIN
  AFFILIATE
  USER
}

enum TransactionType {
  REFERRAL_COMMISSION
  DOWNLINE_EARNING
  WITHDRAWAL
  DEPOSIT
  ADJUSTMENT
}
