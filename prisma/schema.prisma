generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


enum UserRole {
  ADMIN
  AFFILIATE
  USER
}

enum TransactionType {
  REFERRAL_COMMISSION
  DOWNLINE_EARNING
  WITHDRAWAL
  DEPOSIT
  ADJUSTMENT
}

model User {
  id              String         @id @default(cuid())
  firstName       String
  lastName        String
  email           String         @unique
  password        String         // Hashed via auth logic
  phone           String?
  address         String?
  referralCode    String         @unique // Auto-generated on signup
  referredById    String?        // Self-referential for tree
  isActive        Boolean        @default(true) // For deactivating users/leaving program
  role            UserRole       @default(AFFILIATE)
  totalEarnings   Float          @default(0)
  currentBalance  Float          @default(0)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  // Self-referential relations
  referredBy      User?          @relation("ReferralTree", fields: [referredById], references: [id])
  referrals       User[]         @relation("ReferralTree") // Direct children
  downline        User[]         @relation("DownlineEarnings") // Indirect for aggregates (query dynamically)

  // Earnings history
  transactions    Transaction[]

  // NextAuth
  accounts        Account[]
  sessions        Session[]

  @@map("users")
}

model Transaction {
  id          String         @id @default(cuid())
  userId      String
  amount      Float
  type        TransactionType
  description String?
  referenceId String?        // Link to sale/product
  createdAt   DateTime       @default(now())

  user        User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("transactions")
}

// NextAuth models
model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

