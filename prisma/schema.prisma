generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


enum UserRole {
  ADMIN
  AFFILIATE
  USER
}

enum TransactionType {
  REFERRAL_COMMISSION
  DOWNLINE_EARNING
  WITHDRAWAL
  DEPOSIT
  ADJUSTMENT
}

model User {
  id              String         @id @default(cuid())
  name            String
  firstName       String?
  lastName        String?
  email           String         @unique
  emailVerified   Boolean        @default(false)
  image           String?
  password        String?         // Hashed via auth logic
  phone           String?
  address         String?
  referralCode    String?         @unique // Auto-generated on signup
  referredById    String?        // Self-referential for tree
  isActive        Boolean        @default(true) // For deactivating users/leaving program
  role            UserRole       @default(AFFILIATE)
  totalEarnings   Float          @default(0)
  currentBalance  Float          @default(0)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  // Self-referential relations
  referredBy      User?          @relation("ReferralTree", fields: [referredById], references: [id])
  referrals       User[]         @relation("ReferralTree") // Direct children

  // Earnings history
  transactions    Transaction[]

  // NextAuth
  accounts        Account[]
  sessions        Session[]



  @@map("users")
}

model Transaction {
  id          String         @id @default(cuid())
  userId      String
  amount      Float
  type        TransactionType
  description String?
  referenceId String?        // Link to sale/product
  createdAt   DateTime       @default(now())

  user        User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("transactions")
}

// NextAuth models
model Account {
  id                    String    @id @default(cuid())
  userId                String
  accountId             String
  providerId            String
  accessToken           String?   @db.Text
  refreshToken          String?   @db.Text
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  idToken               String?   @db.Text
  sessionState          String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("account")
}

model Session {
  id           String   @id @default(cuid())
  userId       String
  expiresAt    DateTime
  token        String      @unique
  ipAddress    String?
  userAgent    String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}


model Verification {
  id        String   @id @default(cuid())
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
  value     String   
  identifier String
  expiresAt    DateTime


  @@map("verification")
}

